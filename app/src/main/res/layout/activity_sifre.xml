<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.missgumus.mobile.missgumus5.SifreActivity">

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="kullanıcı"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="77dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:text="şifregir"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        tools:layout_editor_absoluteY="196dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="yeni şifre"
        android:inputType="textPassword"
        android:text="şifregir"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        tools:layout_editor_absoluteY="287dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="şifregir"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifrenizi girin!"
        app:layout_constraintStart_toStartOf="@+id/editText4"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni şifre giriniz!"
        app:layout_constraintStart_toStartOf="@+id/editText6"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="94dp"
        android:layout_height="22dp"
        android:text="Tekrar giriniz!"
        app:layout_constraintStart_toStartOf="@+id/editText7"
        tools:layout_editor_absoluteY="365dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:text="şifre değiştir"
        android:textColor="@color/backgroundColor"
        app:layout_constraintStart_toStartOf="@+id/editText8"
        tools:layout_editor_absoluteY="472dp" />
</android.support.constraint.ConstraintLayout>
